        mc:Ignorable="d"
        Title="Створити студента" Height="210" Width="430">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,11,0,0" TextWrapping="Wrap" Text="ПІБ:" VerticalAlignment="Top"/>
        <TextBox x:Name="PhoneTextBox" HorizontalAlignment="Left" Margin="173,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="247"/>
