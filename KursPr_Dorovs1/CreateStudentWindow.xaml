        <TextBlock HorizontalAlignment="Left" Margin="10,104,0,0" TextWrapping="Wrap" Text="Номер кімнати проживання:" VerticalAlignment="Top"/>
        <ComboBox x:Name="RoomIdItemList" DisplayMemberPath="RoomId" Margin="173,102,10,46"/>
        <Button Content="Створити студента" HorizontalAlignment="Center" Margin="0,127,0,0" VerticalAlignment="Top" Width="132" Height="25" Click="Button_Click"/>
    </Grid>
</Window>
